<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1759066316784-1-add-massages" author="Ramis">
<!--        <preConditions onFail="MARK_RAN">-->
<!--            <not>-->
<!--                <tableExists tableName="messages"/>-->
<!--            </not>-->
<!--        </preConditions>-->
        <createTable tableName="messages">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="messages_pk"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="chat_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="messages" baseColumnNames="user_id" constraintName="messages_user_id_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="messages" baseColumnNames="chat_id" constraintName="messages_chat_id_fk"
                                 referencedTableName="chats"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>